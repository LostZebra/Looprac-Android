<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- TextView theme -->
    <style name="First_level_title" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">18sp</item>
        <item name = "android:gravity">center_vertical|left</item>
        <item name = "android:paddingLeft">5dp</item>
        <item name = "android:paddingTop">3dp</item>
        <item name = "android:paddingBottom">3dp</item>
    </style>
    
     <style name="Weibo_id_zone" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">14sp</item>
        <item name = "android:textColor">#000000</item>
        <item name = "android:alpha">0.5</item>
        <item name = "android:gravity">center_horizontal</item>
        <item name = "android:background">#eeeeee</item>
        <item name = "android:paddingTop">2dp</item>
        <item name = "android:paddingBottom">2dp</item>
     </style>
    
    <style name="Weibo_content_zone" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">14sp</item>
        <item name = "android:textColor">#000000</item>
        <item name = "android:gravity">center_vertical|left</item>
        <item name = "android:paddingLeft">4dp</item>
        <item name = "android:paddingRight">4dp</item>
        <item name = "android:paddingTop">3dp</item>
        <item name = "android:paddingBottom">3dp</item>
        <item name = "android:maxLength">140</item>
        <item name = "android:maxLines">10</item>
        <item name = "android:visibility">gone</item>
        <item name = "android:background">#eeeeee</item>
    </style>
    
    <style name="Weibo_time_zone" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">12sp</item>
        <item name = "android:gravity">center_vertical|right</item>
        <item name = "android:paddingRight">3dp</item>
        <item name = "android:paddingTop">2dp</item>
        <item name = "android:paddingBottom">2dp</item>
        <item name = "android:visibility">gone</item>
        <item name = "android:background">#eeeeee</item>
    </style>
    
    <style name="Phone_class_text" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">12sp</item>
        <item name = "android:textColor">#777777</item>
        <item name = "android:gravity">center_vertical|left</item>
        <item name = "android:paddingLeft">3dp</item>
        <item name = "android:visibility">gone</item> 
    </style>
    
    <style name="Phone_text" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">12sp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:paddingRight">5dp</item>
        <item name = "android:paddingLeft">5dp</item>
        <item name = "android:visibility">gone</item> 
    </style>
    
    <style name="Phone_type_list" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">12sp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:paddingRight">5dp</item>
        <item name = "android:paddingLeft">5dp</item>
        <item name = "android:textColor">#eeeeee</item>
        <item name = "android:entries">@array/phonetypelist</item>        
        <item name = "android:visibility">gone</item> 
    </style>
    
    <style name="Second_level_title" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">16sp</item>
        <item name = "android:gravity">center_vertical|left</item>
        <item name = "android:paddingLeft">5dp</item>
        <item name = "android:paddingTop">3dp</item>
        <item name = "android:paddingBottom">3dp</item>
    </style>
    
    <style name="Button" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">14sp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:text">...</item>
        <item name = "android:visibility">gone</item>
        <item name = "android:background">#ffffff</item>
    </style>
    
    <style name="Button_for_addNum" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">14sp</item>
        <item name = "android:text">@string/addnewnum</item>
        <item name = "android:alpha">0.5</item>
        <item name = "android:background">#ffffff</item>
    </style>
    
    <style name="Phone_class_text2" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">14sp</item>
        <item name = "android:textColor">#777777</item>
        <item name = "android:paddingRight">2dp</item>
    </style>
    
    <style name="EditText" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name = "android:textSize">14sp</item>
        <item name = "android:hint">@string/addhint</item>
        <item name = "android:gravity">center</item>
        <item name = "android:paddingBottom">2dp</item>
        <item name = "android:paddingTop">2dp</item>
        <item name = "android:paddingLeft">2dp</item>
        <item name = "android:inputType">phone</item>e
    </style>
</resources>
